<h1>Contact Page</h1>

<form class="form-horizontal">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-10">
			{{input type="email" value=emailAddress class="form-control" id="inputEmail" placeholder="Enter your email"}}
    </div>
  </div>
  <div class="form-group">
    <label for="inputText" class="col-sm-2 control-label">Message</label>
    <div class="col-sm-10">
			{{textarea value=message class="form-control" id="inputText" placeholder="Add your message here (at least 5 charachters.)"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button disabled={{unless isValid 'disabled'}} {{action "sendMessage"}} type="submit" class="btn btn-default">Send Message</button>
    </div>
  </div>
	
	{{#if responseMessage}}
		<div class="col-md-6">
			<br>
			<div class="alert alert-success">
				<h4>Thank you for submitting message!</h4>
		  	{{responseMessage}}
		  </div>
		</div>
	{{/if}}

</form>